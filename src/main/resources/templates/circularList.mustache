<!DOCTYPE html>
<html lang="{{locale}}">
<head>
    {{>common/meta}}
    <title>{{menu.circular}}</title>
    {{>common/link}}
    {{>common/script}}
</head>
<body>
{{>layout/header}}
<div class="container-fluid py-5" style="min-height:800px;">
    <h2 class="m-2">{{menu.circular}}</h2>
    <table class="table text-center">
        <thead class="table-dark">
        <tr>
            <td>{{article.label.number}}</td>
            <td class="w-50">{{article.label.title}}</td>
            <td>{{circular.label.upload_date}}</td>
            {{#member.isAdmin}}
                <td>{{circular.label.feature}}</td>
            {{/member.isAdmin}}
        </tr>
        </thead>
        <tbody>
        {{#circulars.getContent}}
            <tr>
                <td>
                    {{id}}
                </td>
                <td>
                    <a href="/api/circulars/{{id}}">{{title}}</a>
                </td>
                <td>
                    {{createdAt}}
                </td>
                {{#member.isAdmin}}
                    <td>
                        <form action="/circulars/{{id}}" method="post">
                            <input type="hidden" name="_method" value="delete">
                            <input type="submit" class="btn btn-primary p-1" value="삭제">
                        </form>
                    </td>
                {{/member.isAdmin}}
            </tr>
        {{/circulars.getContent}}
        </tbody>
    </table>
    {{#member.isAdmin}}
        <button class="btn btn-dark m-2"
                onclick="location.href='/circulars/add'">파일 올리기
        </button>
    {{/member.isAdmin}}

    <div class="d-flex justify-content-center">
        <ul class="pagination">
            {{#circulars.hasPrevious}}
                <li class="page-item">
                    <a class="page-link" href="/circulars?page={{circulars.previousPageable.getPageNumber}}">
                    {{pagination.prev}}
                    </a>
                </li>
            {{/circulars.hasPrevious}}

            {{#circulars.hasNext}}
                <li class="page-item">
                    <a class="page-link" href="/circulars?page={{circulars.nextPageable.getPageNumber}}">
                    {{pagination.next}}
                    </a>
                </li>
            {{/circulars.hasNext}}
        </ul>
    </div>
</div>
{{>layout/footer}}
</body>
</html>